config("intention_cooperate_client_public_config") {
  include_dirs = [
    "include",
    "${device_status_interfaces_path}/innerkits/interaction/include",
  ]
}

ohos_source_set("intention_cooperate_client") {
  sanitize = {
    integer_overflow = true
    ubsan = true
    boundary_sanitize = true
    cfi = true
    cfi_cross_dso = true
